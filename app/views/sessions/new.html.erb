<% provide(:title, t("pages.login.page_title")) %>
<h1><%= t("pages.login.h1") %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>
      <%= f.label t("pages.login.fields.email") %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label t("pages.login.fields.password") %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t("pages.login.fields.remember_me") %></span>
      <% end %>

      <%= f.submit t("pages.login.login_button"), class: "btn btn-primary" %>
    <% end %>

    <%= t("pages.login.opts.new_user_html", signup_url: signup_path) %>
  </div>
</div>
